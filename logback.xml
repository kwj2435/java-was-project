<configuration>

  <!-- 콘솔에 로그 출력 -->
  <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>[%d{yyyy-MM-dd HH:mm:ss}] [%level] [%thread] %logger{36} - %msg%n</pattern>
    </encoder>
  </appender>

  <!-- 루트 로거 설정 -->
  <root level="info">
    <appender-ref ref="CONSOLE"/>
  </root>

</configuration>